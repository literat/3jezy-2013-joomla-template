{
  "name": "3jezy-2017-joomla-template",
  "version": "1.0.0",
  "description": "Joomla Template for 3jezy 2017 Design",
  "scripts": {
    "format": "npm run format:check",
    "format:check": "prettier --list-different '**/*.php' --ignore-path .prettierignore",
    "format:fix": "prettier --write '**/*.php' --ignore-path .prettierignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literat/3jezy-2017-joomla-template.git"
  },
  "keywords": [],
  "author": "Tomas Litera <tomas@litera.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/literat/3jezy-2017-joomla-template/issues"
  },
  "homepage": "https://github.com/literat/3jezy-2017-joomla-template#readme",
  "devDependencies": {
    "@prettier/plugin-php": "^0.11.2",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "singleQuote": true,
          "bracketSpacing": true,
          "useTabs": false,
          "trailingCommaPHP": "all",
          "printWidth": 120,
          "tabWidth": 4,
          "semi": true
        }
      }
    ]
  }
}
